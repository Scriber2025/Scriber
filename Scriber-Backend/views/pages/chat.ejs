    const reader = new FileReader();
    reader.onload = () => img.src = reader.result;
    reader.readAsDataURL(file);
    previewArea.appendChild(img);
  }
  // Diğer türler
  else {
    previewArea.textContent = `Seçilen dosya: ${file.name}`;
